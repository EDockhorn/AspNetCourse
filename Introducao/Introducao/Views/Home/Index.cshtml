@model Introducao.Models.Pessoa

@{
    ViewBag.Title = "Index";
}

<h2>Curso de ASP MVC</h2>
<p>Curso ASP NET - Johnny Erick Dockhorn</p>

<br />
<br />


<form action="Home/Lista" method="post">
    <fieldset>
        <legend>Informações de Pessoas - Utilizando ViewBag</legend>
    </fieldset>

    <div>
        <label for="ID">Código</label>

    </div>
    <div>
        <input type="number" value="@Model.ID" name="ID" />
    </div>
    <div>
        <label for="Name">Name</label>

    </div>
    <div>
        <input type="text" value="@Model.Name" name="Name" />
    </div>
    <div>
        <label for="Type">Type</label>

    </div>
    <div>
        <input type="text" value="@Model.Type" name="Type" />
    </div>

    <p><input type="submit" value="Enviar" /></p>

</form>

